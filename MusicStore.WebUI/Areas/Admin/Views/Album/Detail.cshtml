@model DetailAlbumViewModel
@{
    ViewBag.Title = "Detail";
}

@Html.MvcSiteMap().SiteMapPath()

<section class="admin-area">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-smart">
                <div class="panel-heading">
                    <h3 class="panel-title">Album Detail</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Album.Genre.Name, "Genre:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.Genre.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Album.Artist.Name, "Artist:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.Artist.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Album.Title, "Title:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.Title, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Album.Description, "Title:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Album.Price, "Price:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.Price, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <span class="text-nowrap">
                                @Html.LabelFor(modelItem => modelItem.Album.AlbumArtUrl, "Album Art Url:", new { @class = "col-sm-2 control-label" })
                            </span>
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Album.AlbumArtUrl, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <br />
                        <div class="col-md-12 col-sm-offset-2">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.Album.Id }) | @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>