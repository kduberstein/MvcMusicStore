@model CreateAlbumViewModel
@{
    ViewBag.Title = "Create";
}

@Html.MvcSiteMap().SiteMapPath()

<section class="admin-area">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Create", "Album", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel panel-smart">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-offset-2">
                                @Html.ValidationSummary()
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.GenreId, "Genre:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.DropDownListFor(modelItem => modelItem.GenreId,
                                    new SelectList(Model.GenreLookupList, "Id", "Name"), "-- Select --", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.ArtistId, "Artist:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.DropDownListFor(modelItem => modelItem.ArtistId,
                                    new SelectList(Model.ArtistLookupList, "Id", "Name"), "-- Select --", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.Title, "Title:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(modelItem => modelItem.Title, new { @class = "form-control", placeholder = "Title" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.Description, "Description:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(modelItem => modelItem.Description, new { @class = "form-control", placeholder = "Description" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.Price, "Price:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(modelItem => modelItem.Price, new { @class = "form-control", placeholder = "Price" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.AlbumArtUrl, "Album Art Url:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(modelItem => modelItem.AlbumArtUrl, new { @class = "form-control", placeholder = "Album Art Url" })
                                <span class="help-block">Images should be no larger than 330px x 330px.</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-2">
                                <button type="submit" class="btn btn-black">Create</button>
                            </div>
                        </div>
                        <div class="col-md-offset-2">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>