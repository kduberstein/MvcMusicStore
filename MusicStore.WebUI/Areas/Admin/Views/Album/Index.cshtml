@model IndexAlbumViewModel
@{
    ViewBag.Title = "Albums";
}

@Html.MvcSiteMap().SiteMapPath()

<div class="table-top-link">
    @Html.ActionLink("Create New", "Create", "Album")
</div>

<div class="table-responsive compare-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Genre</td>
                <td>Artist</td>
                <td>Title</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var album in Model.Albums)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => album.Genre.Name, new { @class = "control-label" })
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => album.Artist.Name, new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => album.Title, new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => album.Price, new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = album.Id }) |
                        @Html.ActionLink("Details", "Detail", new { id = album.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = album.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>