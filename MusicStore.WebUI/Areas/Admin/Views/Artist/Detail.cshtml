@model DetailArtistViewModel
@{
    ViewBag.Title = "Detail";
}

@Html.MvcSiteMap().SiteMapPath()

<section class="admin-area">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-smart">
                <div class="panel-heading">
                    <h3 class="panel-title">Details</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(modelItem => modelItem.Artist.Name, "Name:", new { @class = "col-sm-2 control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(modelItem => modelItem.Artist.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <br />
                        <div class="col-md-12 col-sm-offset-2">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.Artist.Id }) | @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>