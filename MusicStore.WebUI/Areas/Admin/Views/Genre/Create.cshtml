@model CreateGenreViewModel
@{
    ViewBag.Title = "Create";
}

@Html.MvcSiteMap().SiteMapPath()

<section class="admin-area">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Create", "Genre", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel panel-smart">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-offset-2">
                                @Html.ValidationSummary()
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.Name, "Name:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(modelItem => modelItem.Name, new { @class = "form-control", placeholder = "Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(modelItem => modelItem.Description, "Description:", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextAreaFor(modelItem => modelItem.Description, new { @class = "form-control", placeholder = "Description" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-2">
                                <button type="submit" class="btn btn-black">Create</button>
                            </div>
                        </div>
                        <div class="col-md-offset-2">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>